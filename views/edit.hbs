
  <div class="container">
    <header>
    {{> navigation}}
    </header>
    <main>
  
      <div class="row row justify-content-start bg-light m-1">
    <h1 class="rubik text-primary text-center">EDIT CUBE</h1>
        {{!-- Left Column  --}}

        <div class="col-6 m-4 bg-light">    
          <h1 class="rubik text-primary ">{{cube.name}} </h1>
         <div class="form">
        <form action='/edit/{{cube._id}}' method="POST" class="form-floating">
        <div class="mb-3">
            <label class="form-label" for="name">Name:</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="{{cube.name}}" value="{{cube.name}}">
        </div>
        <div class="mb-3">
          <label class="form-label" for="name">Description:</label>
          <textarea id="name" name="description" rows="5" class="form-control">{{cube.description}}</textarea>
        </div>
          <div class="mb-3">
            <label class="form-label" for="image">Image URL:</label>
          <input type="text" id="image" name="image_url"  class="form-control" value="{{cube.image_url}}">
          </div>
          <div class="mb-3">
             <label class="form-label" for="difficulty">Difficulty:</label>
          <select id="difficulty" name="difficultyLevel" class="form-control">
            <option value="1">1 - Very Easy</option>
            <option value="2">2 - Easy</option>
            <option value="3">3 - Medium (Standard 3x3)</option>
            <option value="4">4 - Intermediate</option>
            <option value="5">5 - Expert</option>
            <option value="6">6 - Hardcore</option>
          </select>
          </div>
          
         
          <input type="submit" value="UPDATE" class="btn btn-warning">
        </form>
      </div>
        </div>

        {{!-- Right Column --}}
        <div class="col-4 m-4 mx-auto">
          <img class="p-3 img-fluid rounded border border-3 border-primary" src="{{cube.image_url}}">

           <h2 class="mt-3 rubik text-primary">Accessories</h2>
   
   <div class="row">
    {{#if cube.accessories}}
              {{#each cube.accessories }}

              <div class="col-6" >
               <img src="{{imageUrl}}" class="card-img-top" alt="{{name}}">
               <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
               <p class="card-text">{{description}}</p>
                  
                </div>
              </div>
                {{/each}}
              {{else}}
                <h3 class="italic">This cube has no accessories yet...</h3>
              {{/if}}
      

   </div>
        </div>
         </div>
    </main>
  </div>
  <footer>@Cubicle: Exercise for Express.js and Handlebars</footer>

